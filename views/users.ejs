<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Utilisateurs - Port Russell</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="header-container">
            <a href="/" class="logo">⚓ Port Russell</a>
            <nav>
                <ul>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/catways-manage">Catways</a></li>
                    <li><a href="/reservations-manage">Réservations</a></li>
                    <li><a href="/users-manage">Utilisateurs</a></li>
                    <li class="user-info"><span><%= user.username %></span></li>
                    <li><a href="/logout" class="btn btn-secondary btn-sm">Déconnexion</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        <h1 class="page-title">Gestion des Utilisateurs</h1>

        <div id="alert-container"></div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Liste des Utilisateurs</h2>
                <button class="btn btn-primary" onclick="openModal()">
                    Ajouter un Utilisateur
                </button>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Email</th>
                            <th>Date de création</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="users-list">
                        <tr><td colspan="4" class="text-center">Chargement...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <div id="modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="modal-title">Ajouter un Utilisateur</h2>
                <button class="close-modal" onclick="closeModal()">×</button>
            </div>
            <form id="user-form">
                <input type="hidden" id="user-email">
                <input type="hidden" id="form-mode" value="create">
                
                <div class="form-group">
                    <label for="username">Nom d'utilisateur *</label>
                    <input type="text" id="username" required minlength="3">
                </div>

                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" required>
                </div>

                <div class="form-group" id="password-group">
                    <label for="password">Mot de passe *</label>
                    <input type="password" id="password" minlength="6">
                    <small style="color: #64748b;">Minimum 6 caractères</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Annuler</button>
                </div>
            </form>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Port de Plaisance Russell</p>
    </footer>

    <script>
        let users = [];
        const currentUserEmail = '<%= user.email %>';

        async function loadUsers() {
            try {
                const response = await fetch('/users');
                users = await response.json();
                displayUsers();
            } catch (error) {
                showAlert('Erreur de chargement', 'error');
            }
        }

        function displayUsers() {
            const tbody = document.getElementById('users-list');
            
            if (users.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center">Aucun utilisateur</td></tr>';
                return;
            }

            tbody.innerHTML = users.map(user => {
                const createdAt = new Date(user.createdAt).toLocaleDateString('fr-FR');
                const isCurrentUser = user.email === currentUserEmail;

                return `
                    <tr ${isCurrentUser ? 'style="background-color: #f1f5f9;"' : ''}>
                        <td>
                            ${user.username}
                            ${isCurrentUser ? '<span class="badge badge-info">Vous</span>' : ''}
                        </td>
                        <td>${user.email}</td>
                        <td>${createdAt}</td>
                        <td class="table-actions">
                            <button class="btn btn-sm btn-primary" onclick="editUser('${user.email}')">
                                Modifier
                            </button>
                            ${!isCurrentUser ? `
                                <button class="btn btn-sm btn-danger" onclick="deleteUser('${user.email}')">
                                    Supprimer
                                </button>
                            ` : ''}
                        </td>
                    </tr>
                `;
            }).join('');
        }

        function openModal(userEmail = null) {
            const modal = document.getElementById('modal');
            const form = document.getElementById('user-form');
            const title = document.getElementById('modal-title');
            const mode = document.getElementById('form-mode');
            const passwordGroup = document.getElementById('password-group');
            const passwordInput = document.getElementById('password');
            const emailInput = document.getElementById('email');

            form.reset();

            if (userEmail) {
                const user = users.find(u => u.email === userEmail);
                title.textContent = 'Modifier l\'Utilisateur';
                mode.value = 'edit';
                document.getElementById('user-email').value = user.email;
                document.getElementById('username').value = user.username;
                document.getElementById('email').value = user.email;
                emailInput.disabled = true;

                passwordInput.removeAttribute('required');
                passwordGroup.querySelector('label').textContent = 'Nouveau mot de passe (optionnel)';
            } else {
                title.textContent = 'Ajouter un Utilisateur';
                mode.value = 'create';
                emailInput.disabled = false;
                passwordInput.setAttribute('required', 'required');
                passwordGroup.querySelector('label').textContent = 'Mot de passe *';
            }

            modal.classList.add('active');
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('active');
        }

        function editUser(email) {
            openModal(email);
        }

        async function deleteUser(email) {
            const user = users.find(u => u.email === email);
            if (!confirm(`Supprimer l'utilisateur ${user.username} ?`)) return;

            try {
                const response = await fetch(`/users/${email}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Utilisateur supprimé', 'success');
                    loadUsers();
                } else {
                    const data = await response.json();
                    showAlert(data.error, 'error');
                }
            } catch (error) {
                showAlert('Erreur de connexion', 'error');
            }
        }

        document.getElementById('user-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const mode = document.getElementById('form-mode').value;
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            const data = { username };
            if (password) data.password = password;

            try {
                let response;

                if (mode === 'create') {
                    data.email = email;
                    if (!password) {
                        showAlert('Le mot de passe est requis', 'error');
                        return;
                    }
                    response = await fetch('/users', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    const originalEmail = document.getElementById('user-email').value;
                    response = await fetch(`/users/${originalEmail}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert(mode === 'create' ? 'Utilisateur créé' : 'Utilisateur modifié', 'success');
                    closeModal();
                    loadUsers();
                } else {
                    const result = await response.json();
                    showAlert(result.error || result.details || 'Erreur', 'error');
                }
            } catch (error) {
                showAlert('Erreur de connexion', 'error');
            }
        });

        function showAlert(message, type) {
            const container = document.getElementById('alert-container');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            container.innerHTML = `<div class="alert ${alertClass}">${message}</div>`;
            setTimeout(() => container.innerHTML = '', 5000);
        }

        loadUsers();
    </script>
</body>
</html>